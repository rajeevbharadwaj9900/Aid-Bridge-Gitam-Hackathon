            alert(`Email sent to ${seekerEmail} with Zoom meeting link: ${zoomLink}`);
        }

        function rejectApplication() {
            const aidName = "Food Donation Aid"; // Change this to dynamically get the aid name if needed
            // Store the rejected aid name in local storage
            localStorage.setItem('rejectedApplication', JSON.stringify({ name: aidName, status: 'rejected' }));
            alert(`Application for ${aidName} has been rejected.`);
